  frmEmpresas: TfrmEmpresas;

implementation
uses uDM;

{$R *.dfm}

procedure TfrmEmpresas.btnAgregarClick(Sender: TObject);
begin
  inherited;
  cdsFamilia.Insert;
  cdsFamilia.FieldByName('IDFAMILIAALUMNO').AsInteger:= DM.Servidor.Folio('IDFAMILIAALUMNO','');
  cdsFamilia.FieldByName('IDFAMILIA').AsInteger:= cdsCatalogo.FieldByName('IDFAMILIA').AsInteger;
  cdsCatalogo.Edit;
end;

procedure TfrmEmpresas.cdsCatalogoNewRecord(DataTable: TDADataTable);
begin
  inherited;
  cdsCatalogo.FieldByName('IDFAMILIA').AsInteger:= DM.Servidor.Folio('IDFAMILIA','');

end;

procedure TfrmEmpresas.FormCreate(Sender: TObject);
begin
  inherited;
  cdsFamilia.Close;
  cdsFamilia.Open;

  cdsAlumnos.Close;
  cdsAlumnos.Open;
end;

initialization
  ModuleInfoManager.RegisterModule('Empresas', TfrmEmpresas);

end.
